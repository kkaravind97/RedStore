<div class="row">
    <div class="col-md-6 m-auto">
        <div class="container mt-5 ps-5">
            <h2 class="text-center">Login</h2>
            <form action="/login" method="post">
                <div class="form-group">
                    <label for="">Email Address</label>
                    <input type="email" class="form-control" name="Email" placeholder="Enter email">
                </div>
                <div class="form-group">
                    <label for="">Pasword</label>
                    <input type="password" class="form-control" name="Password" placeholder="Enter password">
                </div>
                <div class="mt-3">
                    <a href="/signup" class="text-decoration-none" style="color:#dd7973">Create new account?</a>
                    <button type="submit" class="btn float-end" style="background-color: #dd7973; color:aliceblue; font-weight:bold">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>
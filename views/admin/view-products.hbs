<div class="container mt-2">
    <a href="/admin/add-products" class="btn btn-success float-end mt-3"><b>Add Products</b></a>
</div>

<div class="container">
    <div class="row mt-5">
        <table class="table">
  <thead>
    <tr class="">
      <th scope="col">Name</th>
      <th scope="col">Brand</th>
      <th scope="col">Price</th>
      <th scope="col">Description</th>
      <th scope="col">Image</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <td>{{this.Name}}</td>
      <td>{{this.Brand}}</td>
      <td>{{this.Price}}</td>
      <td>{{this.Description}}</td>
      <td><img src="/product-images/{{this._id}}.jpg" alt="" style="width:50px; height:50px;"></td>
      <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-primary" style="width:5rem; font-weight:bold; color:aliceblue">Edit</a></td>
      <td><a href="/admin/delete-product/{{this._id}}" onclick="return confirm('Do you want to delete {{this.Name}}?')" class="btn btn-danger" style="font-weight:bold; color:aliceblue; width:5rem;">Delete</a></td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</div>